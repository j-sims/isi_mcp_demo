---
- name: Remove FilePool policy from PowerScale
  hosts: localhost
  connection: local
  gather_facts: false
  collections:
    - dellemc.powerscale

  tasks:
    - name: Remove FilePool policy "{{ policy_name }}"
      dellemc.powerscale.filepoolpolicy:
        onefs_host: "{{ onefs_host }}"
        port_no: "{{ port_no }}"
        verify_ssl: {{ verify_ssl }}
        api_user: "{{ api_user }}"
        api_password: "{{ api_password }}"
        policy_name: "{{ policy_name }}"
        state: absent
